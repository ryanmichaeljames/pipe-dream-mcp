{
  "servers": {
    "pipe-dream-inline": {
      "type": "stdio",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "c:/repo/ryanmichaeljames/pipe-dream-mcp/src/PipeDreamMcp",
        "--",
        "--dataverse-url",
        "https://your-org.crm.dynamics.com/"
      ]
    },
    "pipe-dream-config-file": {
      "type": "stdio",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "c:/repo/ryanmichaeljames/pipe-dream-mcp/src/PipeDreamMcp",
        "--",
        "--config-file",
        "c:/path/to/your-config.json"
      ]
    }
  }
}
